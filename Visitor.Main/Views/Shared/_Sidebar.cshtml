@using Microsoft.AspNet.Identity;
@using Visitor.Main.Helpers;
<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/Content/img/user2-160x160.jpg" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>@User.Identity.GetFullName()</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header">Visitor Acess Pass</li>
            <li class="@Html.IsSelected(controller: "Home")">
                <a href="@Url.Action("Index", "Home")">
                    <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                </a>
            </li>
            <li class="@Html.IsSelected(controller: "Visitor")">
                <a href="@Url.Action("Index", "Visitor")">
                    <i class="fa fa-dashboard"></i> <span>Visitor Request</span>
                </a>
            </li>
            <li class="@Html.IsSelected(controller: "Approval")">
                <a href="@Url.Action("Index", "Approval")">
                    <i class="fa fa-dashboard"></i> <span>Clip Admin Approval</span>
                </a>
            </li>
            <li class="@Html.IsSelected(controller: "Security")">
                <a href="@Url.Action("Index", "Security")">
                    <i class="fa fa-dashboard"></i> <span>Security Approval</span>
                </a>
            </li>
            <li class="header">Configurations</li>
            <li class="@Html.IsSelected(controller: "User")">
                <a href="@Url.Action("Index", "User")">
                    <i class="fa fa-dashboard"></i> <span>User</span>
                </a>
            </li>
            <li class="@Html.IsSelected(controller: "Company")">
                <a href="@Url.Action("Index", "Company")">
                    <i class="fa fa-dashboard"></i> <span>Company</span>
                </a>
            </li>
            <li class="header">Phase 2</li>
            <li class="@Html.IsSelected(controller: "Applicant")">
                <a href="@Url.Action("Index", "Applicant")">
                    <i class="fa fa-dashboard"></i> <span>Applicant</span>
                </a>
            </li>
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>
