@using MVCGrid.Web
@using Visitor.Main.ViewModels

@model VisitorSearchFilterViewModel
@{
    ViewBag.Title = "Security Approval";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Security Approval
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Security Approval</a></li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="invoice">
        <!-- title row -->
        <div class="row">
            <div class="col-xs-12">
                <h2 class="page-header">
                    Search Visitor
                    <small class="pull-right">@DateTime.Now.ToString("dddd, MMMM dd yyyy")</small>
                </h2>
            </div>
            <!-- /.col -->
        </div>
        <!-- info row -->

        <form class="form-horizontal mvcgrid-search submit-disabled">
            <div class="box-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.Company, new { @class = "control-label rilv-filter-label col-sm-1" })
                    <div class="col-sm-11 remove-input-rightpadding">
                        @Html.TextBoxFor(m => m.Company, new
                           {
                               @class = "form-control input-sm",
                               data_mvcgrid_type = "filter",
                               data_mvcgrid_option = "Company"
                           })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Visitors, new { @class = "control-label rilv-filter-label col-sm-1" })
                    <div class="col-sm-11 remove-input-rightpadding">
                        @Html.TextBoxFor(m => m.Visitors, new
                           {
                               @class = "form-control input-sm",
                               data_mvcgrid_type = "filter",
                               data_mvcgrid_option = "Visitors"
                           })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12 remove-input-rightpadding">
                        <button type="button" class="btn btn-success search-button" data-mvcgrid-apply-filter="click">
                            <i class="fa fa-search"></i> Search
                        </button>
                    </div>
                </div>
            </div>
        </form>
        <div class="row reduce-panel-top">
            <div class="col-sm-12 search-result-section">
                <div>@Html.MVCGrid("SecuritySearch")</div>
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
    <div class="clearfix"></div>
</div>
<!-- /.content-wrapper -->
<style>
    .pagination > .active > a, .pagination > .active > span, .pagination > .active > a:hover, .pagination > .active > span:hover, .pagination > .active > a:focus, .pagination > .active > span:focus {
        background-color: #00a65a;
        border-color: #00a65a;
        z-index: 2;
    }
</style>